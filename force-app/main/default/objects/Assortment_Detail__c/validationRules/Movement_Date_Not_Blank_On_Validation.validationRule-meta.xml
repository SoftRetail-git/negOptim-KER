<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Movement_Date_Not_Blank_On_Validation</fullName>
    <active>true</active>
    <description>Movement Date shouldn&apos;t be blank on Validation.</description>
    <errorConditionFormula>AND(Assortment_BU__r.RecordType.DeveloperName 
&lt;&gt; &quot;Budget&quot;, ISPICKVAL(Status__c, &quot;Validated&quot;), OR(ISNULL(Movement_Date__c), ISBLANK(Movement_Date__c)))</errorConditionFormula>
    <errorDisplayField>Movement_Date__c</errorDisplayField>
    <errorMessage>Cannot validate the record because the Movement Date is blank.</errorMessage>
</ValidationRule>
