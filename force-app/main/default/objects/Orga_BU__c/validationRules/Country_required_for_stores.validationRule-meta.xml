<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Country_required_for_stores</fullName>
    <active>true</active>
    <errorConditionFormula>AND ($RecordType.DeveloperName = &quot;Store&quot;, ISBLANK( Country__c ) )</errorConditionFormula>
    <errorDisplayField>Country__c</errorDisplayField>
    <errorMessage>Country is required</errorMessage>
</ValidationRule>
