                margin-bottom: 5px;
                }

                .grid-container thead {
                min-height: 115px;
                height: 115px;
                }

                .grid-container tbody td, .treegrid-container td {
                text-align:right !important;
                vertical-align:middle !important;
                }

                .grid-container td input {
                text-align:right !important;
